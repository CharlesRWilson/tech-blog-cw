<h2>Your Posts</h2>
{{#each posts}}
<div class="post">
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <p>By {{this.user.username}} on {{this.createdAt}}</p>
    <button data-id="{{this.id}}" class="edit-post">Edit</button>
    <button data-id="{{this.id}}" class="delete-post">Delete</button>
</div>
{{/each}}
<button id="new-post">New Post</button>
